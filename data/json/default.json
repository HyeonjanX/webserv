{
    "server": {
        "listen": 8080,
        "server_name": "localhost",

        "location": {
            "path": "/",
            "root": "data/html/",
            "limit_except": ["GET"],
            "index": ["index.html"]
        },
        "location": {
            "path": "/list/",
            "root": "data/",
            "limit_except": ["GET"],
            "autoindex": true,
            "error_page": [404, "/data/html/50x.html/"]
        },
        "location": {
            "path": "/upload/",
            "root": "./data/image/",
            "limit_except": ["POST", "DELETE"],
            "error_page": [500, 501, 502, 503, "/data/html/50x.html/"]
        },
        "location": {
            "path": "/invalid/return/",
            "root": "./",
            "limit_except": ["GET"],
            "return": [301, "https://youtube.com"]
        },
        "location": {
            "path": "/asdf/",
            "root": "./",
            "limit_except": ["GET"],
            "return": [301, "/invalid/return"]
        }
    }
}
